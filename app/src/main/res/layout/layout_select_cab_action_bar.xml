<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <ImageButton
        android:id="@+id/select_cab_close"
        android:layout_width="wrap_content"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:tint="@android:color/white"
        app:srcCompat="@drawable/ic_close"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/select_cab_pickup"
        android:layout_width="wrap_content"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@+id/select_cab_close"
        android:gravity="center_vertical"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
        android:textColor="@android:color/white"
        tools:text="IIT Kharagpur" />

    <ImageView
        android:id="@+id/select_cab_path"
        android:layout_width="wrap_content"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:layout_toEndOf="@+id/select_cab_pickup"
        android:gravity="center_vertical"
        app:srcCompat="@drawable/ic_path"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/select_cab_drop"
        android:layout_width="wrap_content"
        android:layout_height="?attr/actionBarSize"
        android:layout_toEndOf="@+id/select_cab_path"
        android:gravity="center_vertical"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
        android:textColor="@android:color/white"
        tools:text="Kolkata International Airport" />

</RelativeLayout>